{
  "name": "bbc-50-50-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/charts": "^1.1.17",
    "@apollo/client": "^3.3.11",
    "@testing-library/user-event": "^12.1.10",
    "@types/lodash": "^4.14.170",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.7",
    "antd": "^4.12.3",
    "apollo": "^2.32.5",
    "dayjs": "^1.10.4",
    "graphql": "^15.5.0",
    "http-proxy-middleware": "^2.0.1",
    "i18next": "^19.9.1",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.1.1",
    "jest-fetch-mock": "^3.0.3",
    "lodash": "^4.17.21",
    "mockdate": "^3.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.8",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.2.4",
    "use-react-router-breadcrumbs": "^2.0.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-env": "sh -ac '. .env.${REACT_APP_ENV}; react-scripts start'",
    "start:mock": "REACT_APP_ENV=mock yarn run start-env",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "npx jest --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint -c .eslintrc.js 'src/**/*{.ts,.tsx,.js}'",
    "lint:fix": "eslint -c .eslintrc.js --fix 'src/**/*{.ts,.tsx}'",
    "gentypes": "apollo client:codegen --target typescript --endpoint=http://localhost:8000/graphql --excludes='node_modules/*' --outputFlat='src/graphql/__generated__' --includes='src/**/*.ts*' --useReadOnlyTypes && pretty-quick --pattern 'client/src/graphql/__generated__/**/*.ts' --branch HEAD",
    "introspect": "apollo schema:download src/schema.json --endpoint=http://localhost:8000/graphql",
    "mock-server": "(curl --silent --fail http://localhost:8000/graphql && yarn introspect) ; ts-node-dev ./src/__mocks__/gql-mock-server.ts",
    "prepare": "cd .. && npx husky install",
    "pre-commit": "npx pretty-quick --staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./src/setupTests.ts"
    ],
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/reportWebVitals.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "lines": 70,
        "functions": 70
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      ".+\\.(css|sass|scss|jpg|png|svg|ttf)$": "jest-transform-stub",
      "src/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@axe-core/react": "^4.1.1",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.5",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/jest-axe": "^3.5.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "apollo-server": "^2.21.1",
    "canvas": "^2.8.0",
    "casual": "^1.6.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql-tools": "^7.0.4",
    "husky": "^6.0.0",
    "jest": "26.6.0",
    "jest-axe": "^4.1.0",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "react-axe": "^3.5.4",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6"
  }
}
